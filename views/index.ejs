<!DOCTYPE html>
<html>
    <head>
        <title>To-Do</title>
        <link rel="stylesheet" href="./css/bootstrap.css">
        <link rel="stylesheet" href="./styles.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <meta charset="utf-8">
        <script src="./scripts.js"></script>
    </head>

    <body class="d-flex flex-column min-vh-100">
        <nav class="navbar">
            <a class="navbar-brand" href="/">
                <i style="top: 1px; position: relative; font-size: 2rem; color: white; opacity: 0.9;" class="fa fa-check-circle"></i>
            </a>
            <span style="position: absolute; left: 3rem; font-size: 2rem; color: white; opacity: 0.9;">
                To-Do List
            </span>
        </nav>
        <div class="container-fluid">
            <div class="row" id="newTaskRow">
                <div class="card" id="createTaskCard">
                    <div class="card-body">
                        <form id="CreateNewTask" method="POST" action="/newTask">
                            <div class="form-row">
                                <div class="form-group mx-2">
                                    <input type="text" placeholder="Create Task" name="task" id="newTask" class="form-control px-5" required autofocus>
                                </div>
                                <div class="form-group mx-2">
                                    <input type="date" name="date" class="form-control px-3" id="newTaskDate" required autofocus>
                                </div>
                                <div class="form-group mx-2">
                                    <input type="time" name="time" class="form-control px-3" id="newTaskTime" required autofocus>
                                </div>
                            </div>
                            <div id="newTaskSubmitDiv" style="display: flex; flex-direction: row-reverse;" class="form-row">
                                    <div class="form-group mx-2">
                                        <button class="btn btn-primary" type="button" onclick="clear()">Clear Task</button>
                                    </div>
                                    <div class="form-group mx-2">
                                        <button class="btn btn-primary" type="submit" name="Add">Add Task</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        
        <div class="container-fluid">
            <div class="row">
                <div id="viewTask" class="card">
                    <div class="card-body">
                        <div id="scroll" class="scroll-view">
                            <% for( let index = todos.length -1; index >=0; index-- ) { %>
                                <div style="background-image: linear-gradient(pink,#ffdab9); border-radius: 1rem; position: relative; height: 70px; width: 600px; left: 10px; right: -5px;  overflow-y: scroll; border: none; " class="card my-1">
                                    <div class="card-body">
                                        <div style="display: flex; flex-direction: row; font-size: 1.2rem;" class="row">
                                        <p>
                                            <span>
                                                <i style="font-size: 1.5rem; position: absolute; top: 24px; left:5px;" class="fa fa-check-circle"></i>
                                            </span>
                                            <span style="position: absolute; left: 30px; right: 80px;"><b><%- todos[index].task %></b></span>
                                            <span class="icon1">
                                                <i style="font-size: 1.5rem; position:absolute; top: 24px; right: 25px; border-radius: 2rem;" class="fa fa-trash"></i>
                                            </span>
                                        </p>
                                        </div>
                                    </div>
                                </div>
                            <% } %>  
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>